<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="150dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/iv_menu_minuman"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/minuman_cover" />

        <TextView
            android:id="@+id/tv_menu_nama_minuman"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text=""
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_menu_minuman"
            tools:text="Es Tarik Spesial Untukmu" />

        <TextView
            android:id="@+id/tv_menu_harga_minuman"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text=""
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_menu_nama_minuman"
            tools:text="Rp. 8000" />

        <TextView
            android:id="@+id/btn_kurang_menu_minuman"
            android:layout_width="75dp"
            android:layout_height="40dp"
            android:text="@string/reduced"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:gravity="center"
            android:background="@color/gofood_red"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_menu_harga_minuman"/>


        <TextView
            android:id="@+id/btn_tambah_menu_minuman"
            android:layout_width="75dp"
            android:layout_height="40dp"
            android:text="@string/add"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:gravity="center"
            android:background="@color/gojek_blue"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_menu_harga_minuman"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>