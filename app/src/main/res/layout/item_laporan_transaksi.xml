<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_tanggal_laporan"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text=""
            android:padding="8dp"
            tools:text= "2024-12-15 08:54:00"
            />

        <TextView
            android:id="@+id/tv_nama_pesanan_laporan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:padding="8dp"
            tools:text="Coffe \nCoffe \nLatte "/>

        <TextView
            android:id="@+id/tv_jumlah_pesanan_laporan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            tools:text="Pesanan: 3"
            android:padding="8dp"/>

        <TextView
            android:id="@+id/tv_total_harga_laporan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:padding="8dp"
            tools:text="Total: Rp. 124.000"
            />

        <TextView
            android:id="@+id/tv_jumlah_bayar_laporan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:padding="8dp"
            tools:text="Bayar: Rp. 150.000"/>

        <TextView
            android:id="@+id/tv_nominal_kembalian_laporan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:padding="8dp"
            tools:text="Kembalian: Rp. 26.000"/>

        <TextView
            android:id="@+id/status_laporan"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:padding="8dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:background="@color/gojek_green"
            tools:text="Status: Berhasil"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>